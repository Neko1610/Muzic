<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitleCreatePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo Album Mới"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/edtPlaylistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên Album"
        android:inputType="text"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"/>

    <Button
        android:id="@+id/btnCreatePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo Album"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/menuGradientEnd"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

</LinearLayout>
